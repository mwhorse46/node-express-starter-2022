{
  "name": "express-starter-2022",
  "version": "1.0.0",
  "description": "Node Express Starter for 2022",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon -w .env -w src src/index.js",
    "build": "",
    "test": "NODE_ENV=test jest"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "babel": {
    "env": {
      "test": {
        "plugins": [
          "@babel/plugin-transform-modules-commonjs"
        ]
      }
    }
  },
  "jest": {
    "verbose": true,
    "moduleFileExtensions": [
      "js"
    ],
    "moduleDirectories": [
      "node_modules",
      "__tests__"
    ],
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/redcartel/node-express-starter-2022.git"
  },
  "author": "Carter Adams",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/redcartel/node-express-starter-2022/issues"
  },
  "homepage": "https://github.com/redcartel/node-express-starter-2022#readme",
  "dependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.17.9",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "helmet": "^5.0.2"
  },
  "devDependencies": {
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "supertest": "^6.2.2"
  }
}
